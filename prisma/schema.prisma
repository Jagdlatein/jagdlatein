generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        
model QuizQuestion {
  id         Int     @id
  country    String
  category   String
  topic      String
  question   String
  option_a   String
  option_b   String
  option_c   String
  option_d   String
  correct    String   @db.VarChar(1) // A/B/C/D
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Glossary {
  id         Int      @id @default(autoincrement())
  term       String   @unique
  definition String
  country    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
