// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Falls du MySQL nutzt: provider = "mysql"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Glossary {
  id         Int      @id
  term       String
  definition String
  category   String
  country    String
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())
}

model QuizQuestion {
  id        Int     @id
  country   String
  category  String
  topic     String
  question  String
  option_a  String
  option_b  String
  option_c  String
  option_d  String
  correct   String   // "A" | "B" | "C" | "D"
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@index([country])
  @@index([category])
  @@index([topic])
}
